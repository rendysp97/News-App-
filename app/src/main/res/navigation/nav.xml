<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/bookmark">


    <fragment
        android:id="@+id/bookmark"
        android:name="com.example.news.ui.fragment.Bookmark"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" >
        <action
            android:id="@+id/action_bookmark_to_detailNews"
            app:destination="@id/detailNews" />
    </fragment>
    <fragment
        android:id="@+id/detailNews"
        android:name="com.example.news.ui.fragment.DetailNews"
        android:label="fragment_detail_news"
        tools:layout="@layout/fragment_detail_news" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.news.ui.fragment.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/headline"
        android:name="com.example.news.ui.fragment.Headline"
        android:label="fragment_headline"
        tools:layout="@layout/fragment_headline" >
        <action
            android:id="@+id/action_headline2_to_detailNews"
            app:destination="@id/detailNews" />
    </fragment>
</navigation>